#!/usr/bin/env bash
# This script configures the local machine's IP settings.

# Create a backup of the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Use awk to modify localhost and facebook.com entries
sudo awk '{
  if ($2 == "localhost") {
    $1 = "127.0.0.2"
  }
  if ($2 == "facebook.com") {
    $1 = "8.8.8.8"
  }
  print $0
}' /etc/hosts > /tmp/hosts_temp

# Move the modified file back to /etc/hosts
sudo mv /tmp/hosts_temp /etc/hosts

