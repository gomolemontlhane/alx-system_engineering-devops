#!/usr/bin/env bash
# This script redirects Facebook to 8.8.8.8 and changes localhost to 127.0.0.2

# Backup the original hosts file
sudo cp --preserve /etc/hosts /etc/hosts.backup

# Create a new hosts file
sudo tee /etc/hosts.new > /dev/null <<EOL
127.0.0.2       localhost
8.8.8.8         facebook.com
EOL

# Replace the original hosts file with the new one
sudo mv --backup=numbered /etc/hosts.new /etc/hosts

echo "Hosts file updated successfully."

