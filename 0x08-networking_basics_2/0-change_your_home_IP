#!/usr/bin/env bash
# This script configures the local machine's IP settings.

# Create a temporary file in the same directory
temp_file=$(mktemp "$(dirname "$0")/tmp_hosts.XXXXXX")

# Change localhost resolution to 127.0.0.2
sudo sed 's/127.0.0.1/127.0.0.2/g' /etc/hosts > "$temp_file"

# Change facebook.com resolution to 8.8.8.8
sudo sed -i 's/157.240.11.35/8.8.8.8/g' "$temp_file"

# Copy the modified file over the original /etc/hosts
sudo cp "$temp_file" /etc/hosts

# Remove the temporary file
rm -f "$temp_file"

